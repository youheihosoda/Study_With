<% if @users.exists? %>
  <% @user.followers.each do |user| %>
    <table>
      <tr><h1>フォロワー</h1></tr>
      <tr>
        <td><%= link_to public_user_path(user) do %>
          <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td><%= link_to public_user_path(user) do %>
              <%= user.name %>
            <% end %>
        </td>
        <td class="intro">
          <%= user.introduction %>
        </td>
      </tr>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>