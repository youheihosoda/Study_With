<% study_time.post_comments.each do |comment| %>
  <table>
    <tr>
      <td><%= link_to public_user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
          <% end %>
      </td>
      <td><%= comment.comment %></td>
        <% if comment.user == current_user %>
      <td><%= link_to "削除",  public_study_time_post_comment_path(comment.study_time, comment), method: :delete, "data-confirm" => "本当に削除しますか？" ,class:'delete' %></td>
        <% end %>
    </tr>
  </table>
<% end %>